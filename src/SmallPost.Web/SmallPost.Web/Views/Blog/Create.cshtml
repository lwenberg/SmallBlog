@model SmallPost.Domain.DTOs.BlogDTOs.CreateBlogDTO;

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-4">
	<h3>Create a post</h3>
</div>
<div class="row bg-white p-4 mt-4">
	<div class="col">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group mb-3">
				<div class="w-100">
					<input asp-for="Title" class="form-control" placeholder="Title" id="messageInput" maxLength="100">
					<div class="d-flex justify-content-between">
						<div>
							<span asp-validation-for="Title" class="text-danger d-flex justify-content-start"></span>
						</div>
						<div>
							<span id='counter'>
								100/100
							</span>
						</div>
					</div>
				</div>
			</div>
			<div class="h-75 form-group mt-3">
				<textarea asp-for="Body" class="form-control textarea-tidy" rows="5" style="height: 75%"></textarea>
				<span asp-validation-for="Body" class="text-danger"></span>
			</div>
			<div class="form-group mt-3 d-flex justify-content-end">
				<input type="submit" value="Post" class="btn btn-outline-dark" />
			</div>
		</form>
	</div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
