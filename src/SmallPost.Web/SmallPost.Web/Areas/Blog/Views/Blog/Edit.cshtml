@using SmallPost.Domain.DTOs.BlogDTOs
@model BlogDTO;

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-4 d-flex justify-content-between">
    <div>
        <h3>Edit post</h3>
    </div>
    <div>
        @await Html.PartialAsync("_DeletePartial", Model)
    </div>
</div>
<div class="row bg-white mt-4 p-4">
    <div class="col-md-4 w-100">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <input asp-for="Title" class="form-control" id="messageInput" maxLength="100" />
                <div class="d-flex justify-content-between">
                    <div>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div>
                        <span id='counter'>
                            100/100
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group mt-3 h-75">
                <textarea asp-for="Body" class="form-control textarea-tidy" rows="5" style="height: 75%"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <div class="form-group mt-4 d-flex justify-content-end">
                <input type="submit" value="Save" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
